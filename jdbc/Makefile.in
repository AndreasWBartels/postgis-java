ANT=@ANT@
POSTGIS_LIB_VERSION=@POSTGIS_LIB_VERSION@

all: build

pom.xml: pom.xml.in
	sed 's,%VERSION%,$(POSTGIS_LIB_VERSION),g' $< >$@

clean:
	: nothing to do

build: pom.xml

build clean distclean check:
	$(ANT) $@

maintainer-clean: distclean
	rm -f pom.xml

